<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout" controllerName="halo.sap.mm.RECIPECOST.pages.controller.PlantToPurchOrg">
	<l:VerticalLayout class="sapUiContentPadding">
		<f:Form id="plantForm" editable="true">
			<f:toolbar>
				<Toolbar>
					<Title text="{i18n>AssignPlantToPurchOrg}"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://alert" text="{= ${message>/}.length }" visible="{= ${message>/}.length > 0 }" type="Emphasized"
						press="onMessagePopoverPress"/>
					<Button icon="sap-icon://add-document" press="onNew"/>
					<Button icon="sap-icon://save" press="onSave"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>ID} / {i18n>Plant}">
							<f:fields>
								<ComboBox id="plantcbo" items="{ path: '/PlantSet', sorter: { path: 'Text' } }" selectedKey="{form>/PlantID}">
									<core:Item key="{PlantID}" text="{Text}"/>
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>PurchOrg}">
							<ComboBox id="ekorgcbo" items="{ path: '/PurchOrgSet', sorter: { path: 'Text' } }" selectedKey="{form>/Ekorg}">
									<core:Item key="{Ekorg}" text="{Text}"/>
							</ComboBox>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<t:Table id="planttbl" rows="{/PlantSet}" selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste" ariaLabelledBy="title">
			<t:extension>
				<OverflowToolbar style="Clear">
					<Title text="{i18n>Plant}"/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column width="10rem">
					<Label text="{i18n>ID}"/>
					<t:template>
						<Text text="{PlantID}" wrapping="false"/>
					</t:template>
				</t:Column>
				<t:Column width="20rem">
					<Label text="{i18n>Text}"/>
					<t:template>
						<Text text="{Text}" wrapping="false"/>
					</t:template>
				</t:Column>
				<t:Column width="20rem">
					<Label text="{i18n>PurchOrg}"/>
					<t:template>
						<Text text="{Ekorg}" wrapping="false"/>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
	</l:VerticalLayout>
</mvc:View>