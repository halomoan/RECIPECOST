<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mc="sap.suite.ui.microchart"
	controllerName="halo.sap.mm.RECIPECOST.pages.controller.RecipeHome">
	<l:BlockLayout background="Default" class="customCSS">
		<l:BlockLayoutRow accentCells="Accent1">
			<l:BlockLayoutCell width="1" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
				<Text text="{i18n>SelectPlant}" class="green fontSize3"></Text>
				<ComboBox id="cboPlant" showSecondaryValues="true" width="100%" selectionChange="onPlantChange"></ComboBox>
				<Button text="{i18n>GotoRecipe}" press="onGoToRecipe"></Button>
			</l:BlockLayoutCell>
			<l:BlockLayoutCell title="{i18n>appTitle}" width="2" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
				<FlexBox height="50px" alignItems="End" justifyContent="End">
					<!--<Text text="{i18n>Welcome}" class="green fontSize5 sapUiTinyMarginEnd"></Text><Text text="K.Halomoan" class="fontSize2 sapUiSmallMarginBottom"/>-->
					<Text text="{viewData>/PurchOrg}" class="fontSize2"/>
				</FlexBox>
			</l:BlockLayoutCell>
		</l:BlockLayoutRow>
		<l:BlockLayoutRow>
			<l:BlockLayoutCell title="{i18n>RecipeByGroup}" backgroundColorSet="ColorSet1" backgroundColorShade="ShadeF">
				<mc:InteractiveBarChart id="recipebygroup" labelWidth="25%" displayedBars="5"
					bars="{ path: '/StatisticSet' , filters : [{ path : 'StatID' , operator : 'EQ' , value1 : 'RecipeByGroup' } ], sorter: [ { path: 'Label', descending: 'false', group: 'true' }] }">
					<mc:bars>
						<mc:InteractiveBarChartBar label="{Label}" value="{= ${Value} * 1}" color="Neutral"/>
					</mc:bars>
				</mc:InteractiveBarChart>
			</l:BlockLayoutCell>
			<l:BlockLayoutCell title="{i18n>AboutThisProduct}">
				<Text
					text="{i18n>lngAboutText}"/>
				<Text
					text="Powered by SAPUI5 and S/4 HANA system." class="sapUiSmallMarginTop"/>
			</l:BlockLayoutCell>
		</l:BlockLayoutRow>
	</l:BlockLayout>
</mvc:View>