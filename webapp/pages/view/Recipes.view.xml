<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="halo.sap.mm.RECIPECOST.pages.controller.Recipes">
	<Table id="recipeTable" inset="false" items="{odata>/}">
		<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>Recipe}" level="H2"/>
						<ToolbarSpacer/>
						<SearchField change="onSearchRecipe">
							<layoutData><OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
						</SearchField>
						<Button text="{i18n>Add}" type="Transparent" tooltip="Add Recipe" press=".onAddRecipe"/>
						<OverflowToolbarButton tooltip="More" type="Transparent" text="More" icon="sap-icon://overflow" press=".onSettingDialog"/>
					</OverflowToolbar>
				</headerToolbar>
		<columns>
			<Column width="12em">
				<Text text="Image"/>
			</Column>
			<Column valign="Center">
				<Text text="{i18n>Recipe}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="{i18n>Group}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="{i18n>Location}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="{i18n>Quantity}"/>
			</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="{i18n>Price}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onSelectRecipe">
				<cells>
					<Image src="{/RecipePhotoSet(Werks='PPHS',RecipeID='051MBHHZ7JKRIABKKBNWTM',VersionID='0000')/$value}" width="120px" height="80px"
						press="onSelectImage"/>
					<!--<Image src="{viewData>/pictureUrl}/{RecipeID}" width="80px" />-->
					<ObjectIdentifier title="{Name}" text="{RecipeID}"/>
					<ObjectIdentifier title="{GroupTxt}" text=""/>
					<ObjectIdentifier title="{LocationTxt}" text=""/>
					<ObjectIdentifier title="{Quantity}" text="Unit"/>
					<ObjectNumber
							number="{
								parts:[{path:'Price'},{path:'Currency'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
							unit="{Currency}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>