<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="ImagePopover"
		title="{i18n>ImageOf} {Name}"
		class="sapUiContentPadding"
		placement="{viewData>/ImagePopUpPos}">
		<VBox>
			<Image src="{= '/sap/opu/odata/sap/zrecipecost_odata_srv/RecipePhotoSet(Werks=\'' + ${Werks} + '\',RecipeID=\'' + ${RecipeID} + '\')/$value' }"/>
		<u:FileUploader
			id="ImageUploader"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			fileType="png,jpg"
			width="100%"
			useMultipart="false"
			sendXHR="true"
			maximumFileSize="1"
			uploadComplete="onUploadComplete"/>
		<Button
			text="Upload Image"
			press="onUploadImage"/>
		</VBox>
		<endButton>
			<Button text="{i18n>Close}" press="onImgUploaderClose" />
		</endButton>
		<content>
			<Image src="{ProductPicUrl}" width="15em" />
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>