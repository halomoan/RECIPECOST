<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onSettingConfirm">
		<sortItems>
			<ViewSettingsItem text="{i18n>Name}" key="Name" selected="true" />
			<ViewSettingsItem text="{i18n>Location}" key="LocationTxt" />
			<ViewSettingsItem text="{i18n>RecipeGroup}" key="GroupTxt" />
			<ViewSettingsItem text="{i18n>Cost}" key="Price" />
		</sortItems>
		<groupItems>
			<ViewSettingsItem text="{i18n>Location}" key="LocationTxt" />
			<ViewSettingsItem text="{i18n>RecipeGroup}" key="GroupTxt" selected="true" />
		</groupItems>
		<filterItems>
			<ViewSettingsFilterItem id="VSFGroup" text="{i18n>Group}" key="Groupid">
				<items>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem id="VSFLocation" text="{i18n>Location}" key="Locationid">
				<items>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem id="VSFSubMaterial" text="{i18n>Material}" key="IsSubMaterial">
				<items>
					<ViewSettingsItem text="{i18n>SubMaterial}" key="IsSubMaterial___EQ___true___X" />
					<ViewSettingsItem text="{i18n>FinalMaterial}" key="IsSubMaterial___EQ___false___X" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>