<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog id="addRecipeDialog" contentWidth="540px" contentHeight="450px" title="{i18n>RecipeForm}" icon="sap-icon://activity-items">
		<NavContainer id="form1" class="customCSS">
			<Page id="page1" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
				<content>
					<f:Form id="recipeForm" editable="true">
						<f:title>
							<core:Title text="Recipe"/>
						</f:title>
						<f:layout>
							<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement label="{i18n>NameOfRecipe}">
										<f:fields>
											<Input value="{ path: 'form>/Name', type: 'sap.ui.model.type.String', constraints: { minLength:5, maxLength: 50 } }" autocomplete="false"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Group}">
										<f:fields>
											<ComboBox id="group" selectedKey="{path:'form>/GroupID', type: 'sap.ui.model.type.String', constraints: {  minLength:5 }}">
												<core:Item key="{Groupid}" text="{Text}"/>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Location}">
										<f:fields>
											<ComboBox id="location" items="{ path: '/LocationSet', sorter: { path: 'Text' } }" selectedKey="{path:'form>/LocationID', type: 'sap.ui.model.type.String', constraints: {  minLength:5 }}">
												<core:Item key="{Locid}" text="{Text}"/>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>PortionProduced}">
										<f:fields>
											<StepInput value="{form>/Produced}" min="1" displayValuePrecision="2"></StepInput>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</content>
				 <footer>
            <Toolbar
                id="otbFooter">

               
				<ToolbarSpacer/>
				<Button text="{i18n>Add}" press="onSaveRecipe"/>	
				<Button text="{i18n>Cancel}" press="onCancelAddRecipe"/>
            </Toolbar>
        </footer>
			</Page>
			<Page id="page2" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
				<content></content>
			</Page>
		</NavContainer>
	</Dialog>
</core:FragmentDefinition>